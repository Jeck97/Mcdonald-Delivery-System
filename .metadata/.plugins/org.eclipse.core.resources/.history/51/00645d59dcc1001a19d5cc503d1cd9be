package controller.validator.exception;

/**
 * This class throws an exception if the field is not a number
 * @author Tiang King Jeck
 *
 */
public class InvalidNumberException extends Exception {

	private static final long serialVersionUID = 1L;
	
	public InvalidNumberException(String field) {
		
		super(field + " must be a number");
		
	}

}
